{
  "builds": [
    {
      "src": "functions/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 300
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/functions/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}